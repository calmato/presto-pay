<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
    android:id="@+id/lending"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/lending_status"
    android:textColor="@color/design_default_color_on_secondary"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/addPersonIcon"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/groupIcon"
    app:layout_constraintTop_toTopOf="@+id/addPersonIcon"
    app:layout_constraintVertical_bias="0.307" />

  <ImageView
    android:id="@+id/addPersonIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:contentDescription="@string/person_icon"
    android:src="@drawable/ic_person_add_black_24dp"
    app:layout_constraintEnd_toStartOf="@+id/groupIcon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/groupIcon"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/circle_theme_color"
    android:contentDescription="@string/icon"
    android:src="@drawable/ic_launcher_foreground"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
