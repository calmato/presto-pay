<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
      name="payer"
      type="work.calmato.prestopay.network.PayerAddPayment" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp">

    <CheckBox
      android:id="@+id/checkBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="false"
      android:gravity="center_vertical"
      app:addPaymentCheckBox="@{payer}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/thumbnail"
      android:layout_width="@dimen/thumbnail_list_size"
      android:layout_height="@dimen/thumbnail_list_size"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/circle_theme_color"
      app:addPaymentThumbnail="@{payer}"/>

    <TextView
      android:id="@+id/userName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textSize="24sp"
      app:addPaymentUserName="@{payer}"
      app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
      app:layout_constraintStart_toEndOf="@+id/thumbnail"
      app:layout_constraintTop_toTopOf="@+id/thumbnail"
      app:layout_constraintVertical_bias="0.5"
      tools:text="userName" />

    <TextView
      android:id="@+id/persent"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:text="%"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="@+id/userName"
      app:layout_constraintEnd_toEndOf="parent" />

    <TextView
      android:id="@+id/amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@+id/persent"
      app:layout_constraintEnd_toStartOf="@+id/persent"
      app:layout_constraintTop_toTopOf="@+id/persent"
      app:addPaymentAmount="@{payer}"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
