apiVersion: batch/v1beta1
kind: CronJob

metadata:
  name: batch

spec:
  schedule: "*/1 * * * *"

  jobTemplate:
    spec:
      containers:
        - name: batch
          image: asia.gcr.io/presto-pay-dev/presto-pay-stg-batch-api:latest
          imagePullPolicy: Always
          args: ["./app"]
      restartPolicy: OnFailure
